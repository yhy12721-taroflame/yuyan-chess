{
  "name": "yu_yan_chess",
  "version": "1.0.0",
  "description": "yu_yan chess - 中国象棋游戏引擎 - 纯 TypeScript 实现",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:ui": "esbuild src/app.ts --bundle --outfile=public/app.js --platform=browser",
    "demo": "ts-node demo.ts",
    "dev": "esbuild src/app.ts --bundle --outfile=public/app.js --platform=browser --watch --servedir=public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "server:dev": "ts-node server/src/server.ts",
    "server:build": "tsc --project server/tsconfig.json",
    "server:start": "node server/dist/server.js",
    "server:test": "jest --config server/jest.config.js"
  },
  "keywords": [
    "xiangqi",
    "chinese-chess",
    "game",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "fast-check": "^3.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "ws": "^8.14.0"
  }
}
