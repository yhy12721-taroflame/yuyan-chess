{
  "compilerOptions": {
    // 编译目标
    "target": "ES2020",
    "module": "commonjs",
    
    // 输出配置
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // 严格模式
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // 模块解析
    "moduleResolution": "node",
    "resolveJsonModule": true,
    
    // 其他选项
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
